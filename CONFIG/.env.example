# ============================================
# WAIPRO MULTI-TENANT CONFIGURATION
# ============================================
# Copy this file to .env and fill with real values
# NEVER commit .env to Git!
# ============================================

# ============================================
# WHATSAPP - MISTER PHONE TEC
# ============================================
WHATSAPP_TOKEN_MISTERPHONE=EAAxxxxxxxxxxxxxxxxxxxxxx
WHATSAPP_PHONE_MISTERPHONE=+39xxxxxxxxxx
WHATSAPP_BUSINESS_ID_MISTERPHONE=123456789

# ============================================
# WHATSAPP - RIPARA SUBITO TEC
# ============================================
WHATSAPP_TOKEN_RIPARASUBITO=EAAyyyyyyyyyyyyyyyyyyyyyy
WHATSAPP_PHONE_RIPARASUBITO=+39yyyyyyyyyy
WHATSAPP_BUSINESS_ID_RIPARASUBITO=987654321

# ============================================
# BASE44 CONFIGURATION
# ============================================
BASE44_API_KEY=b44_xxxxxxxxxxxxxxxxxx
BASE44_ACCOUNT_ID=acc_xxxxxxxxxxxxxxx

# Base44 AI Agent IDs per tenant
BASE44_AGENT_MISTERPHONE=agent_misterphone_xxxxx
BASE44_AGENT_RIPARASUBITO=agent_riparasubito_xxxxx

# Base44 App IDs (per social login)
BASE44_APP_ID_MISTERPHONE=app_xxxxxxxx
BASE44_APP_ID_RIPARASUBITO=app_yyyyyyyy

# ============================================
# AUTH0 CONFIGURATION
# ============================================
AUTH0_DOMAIN=waipro-prod.eu.auth0.com
AUTH0_CLIENT_ID=xxxxxxxxxxxxxxxxxxxx
AUTH0_CLIENT_SECRET=yyyyyyyyyyyyyyyyyyyyyyyyyyyyyyyy
AUTH0_AUDIENCE=https://api.waipro.it
AUTH0_CALLBACK_URL=https://app.waipro.it/callback

# ============================================
# SUPABASE CONFIGURATION
# ============================================
SUPABASE_URL=https://xxxxxxxxxxxxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.xxxxxx
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.yyyyyy

# Supabase Database
SUPABASE_DB_PASSWORD=your_secure_password_here

# ============================================
# OPENROUTER / CLAUDE API
# ============================================
OPENROUTER_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxx
CLAUDE_MODEL=anthropic/claude-sonnet-4.5

# ============================================
# N8N CONFIGURATION
# ============================================
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_n8n_password
N8N_HOST=n8n.waipro.it
N8N_PORT=5678
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.waipro.it/
GENERIC_TIMEZONE=Europe/Rome
N8N_METRICS=true

# n8n Database (use PostgreSQL for production)
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=localhost
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=n8n_secure_password

# n8n Encryption (generate with: openssl rand -base64 32)
N8N_ENCRYPTION_KEY=R/sCE9RdnKd1qGlYf0SP/Ec7iaKmVzkE3THqoWVBUtk=

# Execution settings
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true

# ============================================
# NOTIFICATION CHANNELS
# ============================================

# Telegram Bot
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_OPERATOR_CHAT_ID=-1001234567890
TELEGRAM_ALERTS_CHAT_ID=-1009876543210

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@waipro.it
SMTP_PASSWORD=your_app_password
SMTP_FROM=Waipro Notifications <notifications@waipro.it>

# SMS (Twilio)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=yyyyyyyyyyyyyyyyyyyyyyyyyyy
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# COMET.AI CONFIGURATION
# ============================================
COMET_API_KEY=xxxxxxxxxxxxxxxxxxxxx
COMET_WORKSPACE=waipro-agency
COMET_PROJECT_NAME=whatsapp-automation

# ============================================
# OPENWEB UI CONFIGURATION
# ============================================
OPENWEBUI_URL=https://ui.waipro.it
OPENWEBUI_API_KEY=owui_xxxxxxxxxxxxxxxxxx

# ============================================
# VPS / HOSTING
# ============================================
VPS_HOST=vps.waipro.it
VPS_USER=root
VPS_SSH_KEY_PATH=~/.ssh/waipro_vps_ed25519

# ============================================
# DOMAINS & SSL
# ============================================
DOMAIN_MAIN=waipro.it
DOMAIN_N8N=n8n.waipro.it
DOMAIN_AUTH=auth.waipro.it
DOMAIN_UI=ui.waipro.it
DOMAIN_API=api.waipro.it

# Let's Encrypt
LETSENCRYPT_EMAIL=admin@waipro.it

# ============================================
# MONITORING & LOGGING
# ============================================

# Sentry (Error tracking)
SENTRY_DSN=https://xxxxx@sentry.io/yyyyy

# Datadog (Monitoring)
DATADOG_API_KEY=xxxxxxxxxxxxxxxxxxxx
DATADOG_APP_KEY=yyyyyyyyyyyyyyyyyyyy

# ============================================
# SECURITY
# ============================================

# JWT Secret (generate with: openssl rand -base64 64)
JWT_SECRET=your_super_secret_jwt_key_here_min_64_chars_recommended

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://waipro.it,https://*.waipro.it

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_WHATSAPP_ENABLED=true
FEATURE_VOICE_INPUT_ENABLED=true
FEATURE_IMAGE_ANALYSIS_ENABLED=true
FEATURE_AUTO_ESCALATION_ENABLED=true
FEATURE_MULTI_LANGUAGE_ENABLED=false

# ============================================
# CIRCUIT BREAKER SETTINGS
# ============================================
CIRCUIT_BREAKER_MAX_RETRIES=2
CIRCUIT_BREAKER_TIMEOUT_MS=30000
CIRCUIT_BREAKER_RESET_TIMEOUT_MS=60000

# ============================================
# AI CONFIDENCE THRESHOLDS
# ============================================
AI_CONFIDENCE_THRESHOLD_LOW=0.7
AI_CONFIDENCE_THRESHOLD_HIGH=0.9
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.7

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/waipro/app.log

# ============================================
# BACKUP & RECOVERY
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=waipro-backups
BACKUP_S3_REGION=eu-west-1
AWS_ACCESS_KEY_ID=AKIAxxxxxxxxxxxxxxxxxx
AWS_SECRET_ACCESS_KEY=yyyyyyyyyyyyyyyyyyyyyyyyyyy

# ============================================
# DEVELOPMENT / STAGING
# ============================================
NODE_ENV=production
DEBUG=false
VERBOSE_LOGGING=false

# ============================================
# END OF CONFIGURATION
# ============================================
